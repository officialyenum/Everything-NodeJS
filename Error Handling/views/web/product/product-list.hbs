<main>
    <h1>Products List</h1>
    {{#if hasProducts}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            {{ this.title }}
                        </h1>
                        <div class="card__image">
                            <img src="{{ this.imageUrl }}" alt="product image">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$ {{ this.price }} {{ isAuthenticated}}</h2>
                            <p class="product__description">{{ this.description }}</p>
                        </div>
                            <div class="card__actions">
                                <a href="/products/{{ this._id }}" class="btn"> Detail </a>
                                {{#if ../isAuthenticated}}    
                                    {{> addCartBtn product=this }}
                                {{/if}}
                            </div>
                    </header>
                </article>
            {{/each}}
        </div>
    {{else}}
        <h1>No Products Found</h1>
    {{/if}}
</main>