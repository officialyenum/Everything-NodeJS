<main>
  <form class="product-form" action="/admin/add-product" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="form-control">
      <label for="title">Title</label>
      <input
        class="{{#each validationErrors}} {{#if_eq this.param "title"}} invalid {{else}}  {{/if_eq}} {{/each}}" 
        type="text" name="title" id="title" value={{product.title}} />
    </div>
    <div class="form-control">
      <label for="imageUrl">Image Url</label>
      <input
      class="{{#each validationErrors}} {{#if_eq this.param "imageUrl"}} invalid {{else}}  {{/if_eq}} {{/each}}"
        type="text"
        name="imageUrl"
        id="imageUrl"
        value={{product.imageUrl}}
      />
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input
      class="{{#each validationErrors}} {{#if_eq this.param "price"}} invalid {{else}}  {{/if_eq}} {{/each}}"
        type="number"
        name="price"
        id="price"
        step="0.01"
        value={{product.price}}
      />
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea
      class="{{#each validationErrors}} {{#if_eq this.param "description"}} invalid {{else}}  {{/if_eq}} {{/each}}"
        name="description"
        id="descripton"
        rows="5"
      >{{product.description}}</textarea>
    </div>

    <button class="btn" type="submit">Add Product</button>
  </form>
  <hr />
  {{#if hasProducts}}
    <div class="grid">
      {{#each prods}}
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title">
              {{this.title}}
            </h1>
            <div class="card__image">
              <img src="{{this.imageUrl}}" alt="product image" />
            </div>
            <div class="card__content">
              <h2 class="product__price">$ {{this.price}}</h2>
              <p class="product__description">{{this.description}}</p>
            </div>
            <div class="card__actions">
              <button class="btn"> Add to Cart</button>
            </div>
          </header>
        </article>
      {{/each}}
    </div>
  {{else}}
    <h1>No Products Found</h1>
  {{/if}}
</main>