<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ docTitle }}</title>
    <link rel="stylesheet" href="/css/main.css">
    {{#if authCSS }}
        <link rel="stylesheet" href="/css/auth.css">
    {{/if}}
    {{#if formCSS }}
        <link rel="stylesheet" href="/css/forms.css">
    {{/if}}
    {{#if productCSS }}
        <link rel="stylesheet" href="/css/product.css">
    {{/if}}
    {{#if cartCSS }}
        <link rel="stylesheet" href="/css/cart.css">
    {{/if}}
    {{#if orderCSS }}
        <link rel="stylesheet" href="/css/orders.css">
    {{/if}}
</head>
<body>
    <header class="main-header">
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item"><a class="{{#if activeHome}}active{{/if}}" href="/">Home</a></li>
                <li class="main-header__item"><a class="{{#if activeWebProduct}}active{{/if}}" href="/products">Products</a></li>
                {{#if isAuthenticated}}
                <li class="main-header__item"><a class="{{#if activeCart}}active{{/if}}" href="/cart">Cart</a></li>
                <li class="main-header__item"><a class="{{#if activeOrders}}active{{/if}}" href="/orders">Orders</a></li>
                <li class="main-header__item"><a class="{{#if activeAddProduct}}active{{/if}}" href="/admin/add-product">Add Product</a></li>
                <li class="main-header__item"><a class="{{#if activeProduct}}active{{/if}}" href="/admin/products">Admin Products</a></li>
                {{/if}}
            </ul>
            <ul class="main-header__item-list">
                {{#unless isAuthenticated }}
                <li class="main-header__item {{#if activeLogin}}active{{/if}}"><a href="/login">Login</a></li>
                {{else}}
                <li class="main-header__item">
                    <form action="/logout" method="POST">
                        <button class="btn" type="submit">Logout</button>
                    </form>
                </li>
                {{/unless}}
            
            </ul>
        </nav>

    </header>
    <nav class="mobile-nav">
        <ul class="mobile-nav__item-list">
            <li class="mobile-nav__item">
                <a class="{{#if activeHome}}active{{/if}}" href="/">Home</a>
            </li>
            <li class="mobile-nav__item">
                <a class="{{#if activeWebProduct}}active{{/if}}" href="/products">Products</a>
            </li>
            {{#if isAuthenticated}}
                <li class="mobile-nav__item">
                    <a class="{{#if activeCart}}active{{/if}}" href="/cart">Cart</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="{{#if activeOrders}}active{{/if}}" href="/orders">Orders</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="{{#if activeAddProduct}}active{{/if}}" href="/admin/add-product">Add Product
                    </a>
                </li>
                <li class="mobile-nav__item">
                    <a class="{{#if activeProduct}}active{{/if}}" href="/admin/products">Admin Products
                    </a>
                </li>
            {{/if}}
            {{#unless isAuthenticated}}
                <li class="mobile-nav__item">
                    <a class="{{#if activeLogin}}active{{/if}}" href="/login">Login</a>
                </li>
            {{else}}
                <li class="mobile-nav__item">
                    <form action="/logout" method="post">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            {{/unless}}
        </ul>
    </nav>
    {{{ body }}}
    <script src="/js/main.js"></script>
</body>
</html>