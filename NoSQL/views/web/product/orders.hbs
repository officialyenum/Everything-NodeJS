<main>
  <h1>Your Order</h1>
  <main>
    {{#if hasOrders}}
      <ul class="orders">
        {{#each orders}}
          <li class="orders__item">
            <h1>Order - #{{this._id}} </h1>
            {{#each this.items}}
              <ul class="orders__products">
                <li
                  class="orders__products-item"
                >{{this.title}}({{this.quantity}})</li>
              </ul>
            {{/each}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <h1>No Order !</h1>
    {{/if}}
  </main>
</main>