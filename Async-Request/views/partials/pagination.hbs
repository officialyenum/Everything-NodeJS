<section class="pagination">
    {{#if_not_eq_and_not_eq currentPage 1 previousPage 1 }}
        <a href="?page=1">1</a>
    {{/if_not_eq_and_not_eq}}
    {{#if hasPreviousPage}}
        <a href="?page={{previousPage}}">{{ previousPage }}</a>
    {{/if}}
        <a href="?page={{currentPage}}" class="active">{{ currentPage }}</a>
    {{#if hasNextPage}}
        <a href="?page={{nextPage}}">{{ nextPage }}</a>
    {{/if}}
    {{#if_not_eq_and_not_eq lastPage currentPage nextPage lastPage}}
        <a href="?page={{lastPage}}">{{ lastPage }}</a>
    {{/if_not_eq_and_not_eq}}
</section>